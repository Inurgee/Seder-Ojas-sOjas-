# cognitive_layer.py
import time

class CognitiveMind:
    def __init__(self):
        self.digital_plaque = 0

    def perform_rem_cycle(self):
        print("Initiating REM Sleep... Performing Glymphatic Flush.")
        # Clearing data sclerosis
        self.digital_plaque = 0
        time.sleep(5) # Mandatory sleep period
        print("Cognitive decline prevented. System refreshed.")

    def process_task(self):
        self.digital_plaque += 10
        if self.digital_plaque > 80:
            self.perform_rem_cycle()
